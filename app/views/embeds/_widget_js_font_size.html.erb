  for (var i=0; i < len; i++) {
    var header=document.getElementsByClassName("dc-school-name")[i];
    while(document.getElementById("dc-donors-choose-widget").offsetWidth > header.offsetWidth) { 
     document.getElementsByClassName("dc-school-name")[i].style.fontSize = (parseInt(header.style.fontSize + 1) + "px" ); 
    }
