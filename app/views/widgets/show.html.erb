<script type="text/javascript">
  renderWidget = function(widget) {
    var container;
    container = $('.widget')[0];
    return $(container).append(Mustache.to_html($('#widget-template').html(), widget));
  };

  $(function() {
    return $.getJSON("/widgets/<%= @widget.id %>", renderWidget);
  });
</script>

<div class="widget leaderboard">

</div>
<script id='widget-template'>
	<%= render partial: 'templates/widget_leaderboard', handler: 'mustache' %>
</script>