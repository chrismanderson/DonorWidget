<div class="dc-rect wi3-main">
  <div id='dc-donors-choose-widget' class='dc-rect-1'>
    <h3 class="dc-school-name"><%= widget.formatted_name %><span><%= widget.formatted_school %></span></h3>
    <div class="progress progress-success progress-striped dc-donations-bar-wrapper">
      <div class="dc-bar dc-donations-bar" style="width: <%= widget.percent_funded %>%;"></div>
    </div>
    <div class="dc-donations">
      <span class="dc-needed">$<%= widget.cost_to_complete %></span>needed!
    </div>
    <a class="dc-donate btn btn-large btn-danger pull-right" href="<%= widget.proposal_url %>" data-id="<%= widget.id %>" target="_blank">Donate</a>
  </div>
</div>